<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/NegroOled"/> <!-- Color cuando el botón está presionado -->
            <corners android:radius="8dp"/> <!-- Radio de redondeo -->
        </shape>
    </item>
    <!-- Estado normal -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/NegroOled"/> <!-- Color de fondo del botón -->
            <corners android:radius="8dp"/> <!-- Radio de redondeo -->
        </shape>
    </item>
</selector>
