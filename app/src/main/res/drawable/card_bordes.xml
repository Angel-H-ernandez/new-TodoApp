<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/AmarilloBackground"/> <!-- Color de fondo -->
        </shape>
    </item>
    <item android:top="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Fondo transparente para el borde -->
            <stroke android:width="1dp" android:color="@color/Negro"/> <!-- Borde -->
        </shape>
    </item>
</layer-list>
