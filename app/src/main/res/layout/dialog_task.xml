<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp"

    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="?attr/backgroundDialog"
        android:paddingHorizontal="12dp"
        android:paddingVertical="12dp"
        android:layout_height="match_parent">

        <EditText
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"

            android:id="@+id/EtTask"
            android:backgroundTint="@color/Negro"
            android:hint="Titulo de la tarea"
            android:textColor="?android:attr/textColor"
            android:textColorHint="?attr/colorHintEditText"
            android:layout_height="wrap_content">

        </EditText>

        <Button
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/EtTask"
            android:enabled="false"
            app:layout_constraintStart_toEndOf="@+id/BtCancelar"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btnNewTask"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/string_btn_AÃ±adir"
            app:cornerRadius="8dp"
            android:textColor="@color/azul"
            android:backgroundTint="@color/azul_transparente_10">

        </Button>

        <Button
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/EtTask"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnNewTask"
            android:id="@+id/BtCancelar"
            android:layout_width="0dp"
            android:layout_marginEnd="44dp"
            android:layout_height="wrap_content"
            android:text="@string/string_btn_cancelar"
            app:cornerRadius="8dp"
            android:textColor="@color/rojo"
            android:backgroundTint="@color/rojo_10">

        </Button>


    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.cardview.widget.CardView>